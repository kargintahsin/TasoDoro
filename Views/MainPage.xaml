<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TasoDoro.Views.MainPage"
             xmlns:viewmodel="clr-namespace:TasoDoro.ViewModels"
             xmlns:controls="clr-namespace:TasoDoro.Controls"
             x:DataType="viewmodel:TimerViewModel"
             BackgroundColor="#1c1c1e">

    <Grid RowDefinitions="Auto, *, Auto" Padding="30">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" VerticalOptions="Start" Spacing="10" Margin="0,20,0,0">
            <Label Text="TASODORO" 
                   TextColor="#ff6347"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   CharacterSpacing="2"/>
        </VerticalStackLayout>

        <!-- Timer Circle area -->
        <Grid Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center">
            
            <!-- Circular Progress Bar -->
            <controls:CircularProgressBar 
                Progress="{Binding ProgressValue}"
                ProgressColor="{Binding ProgressColor}"
                TrackColor="#2c2c2e"
                StrokeThickness="15"
                HeightRequest="350"
                WidthRequest="350"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>

            <!-- Text Content Inside Circle -->
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                
                <!-- Status (e.g. Çalışma) -->
                <Label Text="{Binding CurrentStateDisplay}" 
                       TextColor="#9e9e9e"
                       FontSize="20"
                       HorizontalOptions="Center"/>

                <!-- Timer -->
                <Label Text="{Binding TimeDisplay}"
                       FontSize="60"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       FontFamily="OpenSansSemibold"/>

                <!-- Cycle Count -->
                <Label FontSize="14"
                       TextColor="#9e9e9e"
                       HorizontalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Tamamlanan: "/>
                            <Span Text="{Binding PomodoroCount}" 
                                  FontAttributes="Bold" 
                                  TextColor="White"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </VerticalStackLayout>
        </Grid>

        <!-- Buttons -->
        <HorizontalStackLayout Grid.Row="2" 
                               Spacing="20" 
                               HorizontalOptions="Center" 
                               VerticalOptions="End"
                               Margin="0,0,0,30">

            <Button Text="OYNAT"
                    Command="{Binding StartCommand}"
                    BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="60"
                    WidthRequest="140"
                    FontAttributes="Bold"
                    IsVisible="True">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding IsRunning}" Value="True">
                        <Setter Property="IsVisible" Value="False"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <Button Text="DURAKLAT"
                    Command="{Binding StopCommand}"
                    BackgroundColor="Red"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="60"
                    WidthRequest="140"
                    FontAttributes="Bold"
                    IsVisible="False">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding IsRunning}" Value="True">
                        <Setter Property="IsVisible" Value="True"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <Button Text="SIFIRLA"
                    Command="{Binding ResetCommand}"
                    BackgroundColor="Black"
                    TextColor="White"
                    BorderColor="#555"
                    BorderWidth="1"
                    CornerRadius="25"
                    HeightRequest="60"
                    WidthRequest="100"
                    FontAttributes="Bold"/>
        </HorizontalStackLayout>

    </Grid>

</ContentPage>